<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?attr/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/dialog_filter_date_from"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_filter_tv_date_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/dialog_filter_date_to"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_filter_tv_date_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />
    </LinearLayout>

    <CalendarView
        android:id="@+id/dialog_filter_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showWeekNumber="false"

        android:dateTextAppearance="@style/calendarViewTextAppearance"
        android:weekDayTextAppearance="@style/calendarViewTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_filter_button_apply"
            style="@style/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dialog_filter_apply_description"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:minWidth="128dp"
            android:text="@string/dialog_filter_apply"
            android:textSize="14sp"
            app:shapeAppearance="@style/ShapeAppearance.WorkTimeRecorder.SmallComponent.TimerFragment" />

    </LinearLayout>
</LinearLayout>